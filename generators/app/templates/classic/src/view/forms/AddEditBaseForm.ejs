Ext.define('Thewall.view.<%= xtypePlural %>.forms.AddEdit<%= XtypeCapitalized %>BaseForm', {
  extend: 'Thewall.userux.form.Base',

  xtype: 'addedit<%= xtype %>baseform',

  getFormFieldsCfg: function() {
    return {
      <%= idProperty %>: {
        xtype: 'numberfield',
        fieldLabel: Ext.String.format(i18n.entityId, i18n.<%= xtype %>),
        name: '<%= idProperty %>'
      },
      title: {
        xtype: 'textfield',
        fieldLabel: i18n.title,
        name: 'title'
      },
      alias: {
        xtype: 'textfield',
        fieldLabel: i18n.alias,
        name: 'alias'
      },
      is_hidden: {
        xtype: 'checkbox1and0',
        name: 'is_hidden',
        boxLabel: i18n.hidden
      }
    };
  },
  layoutFields: function(cfg) {
    var me = this;

    me.items = [
      cfg.title,
      cfg.alias,
      {
        xtype: 'checkboxgroup',
        fieldLabel: i18n.otherSettings,
        columns: 1,
        items: [
          cfg.is_hidden
        ]
      }
    ];
  }
});
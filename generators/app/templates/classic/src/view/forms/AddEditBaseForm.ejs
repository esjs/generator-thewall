Ext.define('Thewall.view.<%= xtypePlural %>.forms.AddEdit<%= XtypeCapitalized %>BaseForm', {
  extend: 'Thewall.view.common.form.Base',

  xtype: 'addedit<%= xtype %>baseform',

  _formFieldsCfg: {
    <%= idProperty %>: {
      xtype: 'numberfield',
      fieldLabel: Ext.String.format(i18n.entityId, i18n.<%= xtype %>),
      name: '<%= idProperty %>'
    },
    title: {
      xtype: 'textfield',
      fieldLabel: i18n.title,
      name: 'title'
    },
    is_hidden: {
      xtype: 'checkbox1and0',
      name: 'is_hidden',
      boxLabel: i18n.hidden
    }
  },
  layoutFields: function(cfg) {
    var me = this;

    me.items = [
      cfg.title,
      {
        xtype: 'checkboxgroup',
        fieldLabel: i18n.otherSettings,
        columns: 1,
        items: [
          cfg.is_hidden
        ]
      }
    ];
  }
});
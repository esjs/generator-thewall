Ext.define('Thewall.view.<%= xtypePlural %>.forms.AddEdit<%= XtypeCapitalized %>DetailForm', {
  extend: 'Thewall.view.<%= xtypePlural %>.forms.AddEdit<%= XtypeCapitalized %>BaseForm',

  xtype: 'addedit<%= xtype %>detailform',

  recordBindName: 'record',

  layoutFields: function(cfg) {
    var me = this;

    me.items = [
      {
        header: false,
        layout: 'anchor',
        bodyPadding: '10 10 0 10',
        defaults: {
          anchor: '100%'
        },
        items: [
          cfg.title,
          cfg.alias,
          {
            xtype: 'checkboxgroup',
            fieldLabel: i18n.otherSettings,
            columns: 2,
            items: [
              cfg.is_hidden
            ]
          }
        ]
      }
    ];
  }
});